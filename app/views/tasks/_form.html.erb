<%= form_with(model: tasks, local: true) do |f| %>

 <% if tasks.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% tasks.errors.full_tasks.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>

  <%= f.submit '追加' %>
<% end %>